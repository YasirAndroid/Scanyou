<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TextScannerActivity"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:id="@+id/btn_pick"
        android:layout_height="50dp"
        android:layout_margin="20dp"
        android:background="@drawable/main_item_theme"
        android:text="Pick Image"
        android:gravity="center"
        android:textSize="16sp"
        android:textColor="@color/colorPrimary"
        android:elevation="5dp"
        android:textStyle="bold"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="6dp"
        android:id="@+id/iv_text_image"
        android:paddingBottom="40dp"
        android:paddingLeft="25dp"
        android:paddingTop="40dp"
        android:paddingRight="25dp"
        android:layout_weight="1"
        android:src="@drawable/pick_image_holder"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="78dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/btn_scan_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/main_btn_theme"
            android:gravity="center"
            android:text="Scan Text"
            android:textColor="@color/cardview_light_background"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>


</LinearLayout>